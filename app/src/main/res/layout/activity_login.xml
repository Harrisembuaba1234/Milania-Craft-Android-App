<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.Login">

    <ImageView
        android:id="@+id/icon_park_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="203dp"
        android:clipToOutline="true"
        android:background="@drawable/login"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/icon_park_s"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="60dp"
        android:textColorHint="@color/coklat"
        app:boxBackgroundColor="@color/white"
        style="@style/textInputLayout.GrayLabel1"
        >
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:backgroundTint="#DD8B55"
            android:ems="15"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColorHint="#EEC19F" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/katasandi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textemail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="60dp"
        android:textColorHint="@color/coklat"
        app:boxBackgroundColor="@color/white"
        style="@style/textInputLayout.GrayLabel1"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/coklat"
        >
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#DD8B55"
            android:ems="15"
            android:hint="Kata Sandi"
            android:inputType="textPassword"
            android:textColorHint="#EEC19F" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/lupa_kata_s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:text="@string/lupa"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        android:layout_marginEnd="65dp"
        app:layout_constraintTop_toBottomOf="@id/katasandi" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:padding="10dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/coklat"
        app:layout_constraintTop_toBottomOf="@id/lupa_kata_s"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Masuk"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/belum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/belum"
        android:textColor="@color/black"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:id="@+id/daftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:textColor="@color/coklat"
        android:textStyle="normal"
        app:layout_constraintLeft_toRightOf="@+id/belum"
        app:layout_constraintTop_toBottomOf="@id/button"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="4dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>