<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="20dp"
    tools:context=".EditProfile">

    <androidx.cardview.widget.CardView
        android:id="@+id/alertUplod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardCornerRadius="25dp"
        android:elevation="10dp"
        android:clickable="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="180dp"
        app:cardBackgroundColor="@color/coklat">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_baseline_edit_24"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Edit Profil"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/coklat"
        android:id="@+id/idEdit"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imgProfile"
        android:src="@drawable/rokok"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/idEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </de.hdodenhof.circleimageview.CircleImageView>

    <ImageView
        android:id="@+id/kembaliProfil"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@+id/imgProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Email"
            android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
            android:textSize="14dp"
            android:drawablePadding="10dp"
            android:textStyle="bold"
            android:textColor="@color/coklat" />
        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:backgroundTint="@color/coklat"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Nama"
            android:drawableLeft="@drawable/ic_baseline_account_circle_24"
            android:textStyle="bold"
            android:drawablePadding="10dp"
            android:textSize="14dp"
            android:textColor="@color/coklat" />
        <EditText
            android:id="@+id/editNama"
            android:inputType="text"
            android:backgroundTint="@color/coklat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="No. Telp"
            android:drawableLeft="@drawable/ic_baseline_phone_24"
            android:textStyle="bold"
            android:textSize="14dp"
            android:drawablePadding="10dp"
            android:textColor="@color/coklat" />
        <EditText
            android:id="@+id/editTelp"
            android:layout_width="match_parent"
            android:inputType="number"
            android:backgroundTint="@color/coklat"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Simpan"
        android:backgroundTint="@color/coklat"
        android:padding="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>